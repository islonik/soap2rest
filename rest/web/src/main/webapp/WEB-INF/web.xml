<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>

    <context-param>
        <param-name>resteasy.provider.baduri</param-name>
        <param-value>org.javaee.soap2rest.rest.web.utils.BadURIExceptionMapper</param-value>
    </context-param>

    <context-param>
        <param-name>resteasy.provider.ejb</param-name>
        <param-value>org.javaee.soap2rest.rest.web.utils.EjbExceptionMapper</param-value>
    </context-param>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Soap2RestSecurityDomain</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>WEBSERVICE.SOAP2REST.REST</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>default</realm-name>
    </login-config>
    <security-role>
        <role-name>WEBSERVICE.SOAP2REST.REST</role-name>
    </security-role>

</web-app>